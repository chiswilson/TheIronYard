%div.col-md-6.my-form
  = form_for @account, html: {class: "form-horizontal"} do |f|

    %fieldset
      / Form Name
      %legend Account
    
      .form-group
        = f.label :name, "Account Name:", class: "col-md-4 control-label"
        .col-md-4
          = f.text_field :name, class: "form-control input-md"
    
      .form-group
        = f.label :account_num, "Account Number:", class: "col-md-4 control-label"
        .col-md-4
          = f.text_field :account_num, class: "form-control input-md"
    
      .form-group
        = f.label :description, "Description:", class: "col-md-4 control-label"
        .col-md-8
          = f.text_area :description, class: "form-control input-md"

      .form-group
        = f.label :max_contacts, "Max. Contacts", class: "col-md-4 control-label"
        .col-md-4
          = f.text_field :max_contacts, class: "form-control input-md"    

      .form-group
        .col-md-4
        .col-md-8
          = f.submit class: "btn btn-primary"
          &nbsp; or
          = link_to 'CANCEL', accounts_path
